<div class="OG">
  <div class="cover">
    <h1>Welcome to my world!</h1>
  </div>
  <div class="container">
    <div class="container-title">
        <h3>Lists of Movies</h3>
        <%= link_to "Create list", new_list_path, class: "btn" %>
    </div>
  </div>

  <div class="container-grid">
    <div class="card-grid">
      <% @lists.each do |list| %>
        <div class="card-category">
          <div class="card-content" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url("background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url("simon-berger-rydQVdwcgUQ-unsplash.jpg")";">
            <h4><%= link_to list.name, list_path(list) %></h4>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
