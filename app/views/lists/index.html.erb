<div class="OG">
  <div class="cover">
    <h1>Welcome to my world!</h1>
  </div>
  <div class="container">
    <div class="container-title">
        <h3>Lists of Movies</h3>
        <%= link_to "Create list", new_list_path, class: "btn" %>
    </div>
  </div>

  <div class="container-grid">
    <div class="card-grid">
      <% @lists.each_with_index do |list, index| %>
        <div class="card-category">
            <h4><%= link_to list.name, list_path(list), class: "card-content #{index + 1}" %></h4>
        </div>
      <% end %>
    </div>
  </div>
</div>
